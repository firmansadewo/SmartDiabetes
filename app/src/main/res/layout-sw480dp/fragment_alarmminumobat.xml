<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#525050"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="10dp"
            android:translationZ="60dp"
            android:orientation="vertical">


            <ListView
                android:id="@+id/alarm_listmin"
                style="@style/widget"
                android:layout_height="500dp"
                android:layout_below="@+id/header"
                />

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/add_alarmmin"
            style="@style/widget"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_marginTop="300dp"
            android:background="@drawable/buttonadd"
            android:onClick="onAddAlarmClick"
            android:textColorLink="#006D1010" />
    </LinearLayout>

</RelativeLayout>