<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical">


    <EditText
        android:id="@+id/inputtrackpuasa"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="10dp"
        android:hint="Masukkan Gula Darah"
        android:inputType="number"
        android:textSize="17dp"/>

    <EditText
        android:id="@+id/inputanggalpuasa"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:hint="Masukkan Tanggal"
        android:inputType="number"
        android:focusable="false"
        android:clickable="true"
        android:textSize="17dp"
        />
    <!--  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="right|center|top">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubmit"
            android:layout_marginRight="40dp"
            android:background="@drawable/ic_buttonmasuk"
            android:text="Input Data"
            android:textAllCaps="false"
            android:fontFamily="@font/bahnschrift"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:layout_marginTop="37dp"
            />
    </LinearLayout>
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/mpChart"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="105dp" />

    <LinearLayout
        android:id="@+id/texthasil"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="360dp"
        android:visibility="invisible">

        <android.support.v7.widget.CardView
            android:layout_width="341dp"
            android:layout_height="46dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:elevation="8dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/bahnschrift"
                android:text="Gula darah pada"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/texttanggalguladarah"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="123dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/bahnschrift"
                android:textColor="@color/greydark"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginLeft="185dp"
                android:fontFamily="@font/bahnschrift"
                android:text="sebesar"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textnilaiguladarah"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="247dp"
                android:fontFamily="@font/bahnschrift"
                android:textColor="@color/daftar"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginLeft="285dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/bahnschrift"
                android:text="mg/dL"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp" />


        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>