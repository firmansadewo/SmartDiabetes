<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">



    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="@drawable/headergymnastic" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:alpha=".80"
        android:fontFamily="@font/bahnschrift"
        android:text="Diabetes Gymnastic"
        android:textColor="#000000"
        android:textSize="20dp" />


    <ScrollView
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:id="@+id/grubbt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="435dp"
                android:orientation="vertical">

                <com.uncopt.android.widget.text.justify.JustifiedTextView
                    android:id="@+id/senamdiabetes"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:paddingBottom="10dp"
                    android:text="@string/senamdiabetes" />

                <com.uncopt.android.widget.text.justify.JustifiedTextView
                    android:id="@+id/senamdiabetes1"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:paddingBottom="10dp"
                    android:text="@string/senamdiabetes1" />

                <com.uncopt.android.widget.text.justify.JustifiedTextView
                    android:id="@+id/senamdiabetes2"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:paddingBottom="10dp"
                    android:text="@string/senamdiabetes2" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    >

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="428dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="268dp"
            android:layout_marginTop="160dp"
            app:cardElevation="0dp">

            <VideoView
                android:id="@+id/video"
                android:layout_width="340dp"
                android:layout_height="270dp"
                android:layout_gravity="center" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>

